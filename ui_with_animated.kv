#:kivy 2.1.0
#:import dp kivy.metrics.dp

<AnimatedButton@Button>:
    # Custom button dengan efek animasi
    canvas.before:
        PushMatrix
        Scale:
            origin: self.center
            x: self.scale if hasattr(self, 'scale') else 1
            y: self.scale if hasattr(self, 'scale') else 1
    canvas.after:
        PopMatrix
    scale: 1

<MainLayout@BoxLayout>:
    orientation: 'vertical'
    padding: dp(20)
    spacing: dp(20)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: 'LOCKER STAMPO'
        font_size: '30sp'
        bold: True
        color: 0, 0, 0, 1
        size_hint_y: None
        height: self.texture_size[1] + dp(10)
        halign: 'center'
        valign: 'middle'
        text_size: self.width, None

    Widget:
    Image:
        source: 'assets/icon.jpg'
        size_hint: None, None
        size: dp(128), dp(128)
        fit_mode: 'contain'
        pos_hint: {'center_x': 0.5}
    
    GridLayout:
        cols: 1
        spacing: dp(15)
        size_hint_y: None
        height: self.minimum_height

        AnimatedButton:
            text: 'LOCK FOLDER'
            size_hint_y: None
            height: dp(50)
            background_color: 0.2, 0.6, 1, 1
            color: 1, 1, 1, 1
            on_press: app.root.get_screen('main').lock_folder()

        AnimatedButton:
            text: 'OPEN FOLDER'
            size_hint_y: None
            height: dp(50)
            background_color: 0.2, 0.6, 1, 1
            color: 1, 1, 1, 1
            on_press: app.root.get_screen('main').unlock_folder()

        AnimatedButton:
            text: 'CHANGE PASSWORD'
            size_hint_y: None
            height: dp(50)
            background_color: 0.2, 0.6, 1, 1
            color: 1, 1, 1, 1
            on_press: app.root.get_screen('main').change_pw()

        AnimatedButton:
            text: 'HISTORY'
            size_hint_y: None
            height: dp(50)
            background_color: 0.2, 0.6, 1, 1
            color: 1, 1, 1, 1
            on_press: app.root.get_screen('main').show_history()

    Widget:
    Label:
        text: "Made by FRK"
        font_size: '14sp'
        color: 0, 0.4, 1, 1
        size_hint_y: None
        height: dp(30)
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        bold:True
<SplashScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "FRK KAPITAL"
            font_size: 38
            color: 0, 0.4, 1, 1

<MainMenu>:
    MainLayout:
